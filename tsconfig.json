{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "commonjs",                     
    "lib": ["ES2020", "ES6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
		"rootDir": "./src",   
		                    
    "removeComments": true,                
    "strict": true,                           
    "typeRoots": [
			"./node_modules/@types", 
			"./src/@types"
		],                       
    "esModuleInterop": true,                  
		"resolveJsonModule": true,
    "skipLibCheck": true,                     
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*"
	]
}
